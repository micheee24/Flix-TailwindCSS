<% @movies.each do |movie| %>
  <section class="movie bg-white rounded-lg shadow-lg overflow-hidden max-w-sm mx-auto my-4">
    <div class="summary p-6">
      <h2 class="movie-title text-xl font-semibold text-gray-800 mb-2">
        <%= movie.title %>
      </h2>
      <h3 class="text-lg text-gray-600 mb-4">
        <%= total_gross(movie) %>
      </h3>
      <p class="text-gray-500 text-sm leading-relaxed mb-4">
        <%= truncate(movie.description, length: 150, separator: ' ') %>
      </p>
      <div class="flex justify-end">
        <a href="#" class="text-blue-500 hover:text-blue-700 text-sm font-semibold">Read More</a>
      </div>
    </div>
  </section>
<% end %>